
## targets

default: Thy
images: 
test: Thy

all: images test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISABELLE_TOOL) usedir -v true -i false -d false -C false -D document


## Thy

THY = $(LOG)/HOL-Thy.gz

Thy: $(THY)

$(THY): Thy/ROOT.ML Thy/Functions.thy
	@$(USEDIR) HOL Thy


## clean

clean:
	@rm -f $(THY)
