\LogoPosition{-.7,-.1}

\def\TWRFrame#1{%
  \psframe[linestyle=none,fillstyle=gradient,gradangle=90,
  gradbegin=black,gradend=gris2,gradmidpoint=0.7]%
  (-1.2,7)(11.6,7.1)
  \PutLogo % Mandatory
  {#1}}

